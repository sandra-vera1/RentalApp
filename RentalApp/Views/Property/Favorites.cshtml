@model IEnumerable<RentalApp.ViewModels.PropertyFavoriteListView>

@{
    ViewData["Title"] = "Favorites";
}

<h1>Favorite Properties</h1>
<br />

<table class="table">
    <thead>
        <tr class="table-dark">
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Neighborhood)
            </th>
            <th>
                Address
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SqFt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Facilities)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Availability)
            </th>
            <th>
                Term
            </th>
            <th>
                Owner [Name]
            </th>
            <th>
                Owner [Phone]
            </th>
            <th>
                Owner [Email]
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
             <td>
                 @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Neighborhood)
            </td>
            <td>
                @String.Format("{0} {1}-{2} / {3} {4} {5} / {6}", item.Country, item.ProvinceName, item.City, item.StreetName, item.StreetNumber, item.SuiteNumber, item.PostalCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SqFt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Facilities)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Availability)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TermName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            
            <td>
                @Html.ActionLink("Delete", "DeleteFavorite", new { id=item.FavoriteId })
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <a asp-action="Index">Properties</a>
</div>
