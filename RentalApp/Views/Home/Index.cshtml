@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4"><b>Welcome to KaBSaV Rentals</b></h1>
    <br />
    <div id="carousel" class="carousel slide">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/css/images/Carousel1.png" class="d-block w-100" data-bs-interval="5000">
            </div>
            <div class="carousel-item">
                <img src="~/css/images/Carousel2.png" class="d-block w-100" data-bs-interval="5000">
            </div>
            <div class="carousel-item">
                <img src="~/css/images/Carousel3.png" class="d-block w-100" data-bs-interval="5000">
            </div>
            <div class="carousel-item">
                <img src="~/css/images/Carousel4.png" class="d-block w-100" data-bs-interval="5000">
            </div>
            <div class="carousel-item">
                <img src="~/css/images/Carousel5.png" class="d-block w-100" data-bs-interval="5000">
            </div>
            <div class="carousel-item">
                <img src="~/css/images/Carousel6.png" class="d-block w-100" data-bs-interval="5000">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button id="btnCarousel" class="carousel-control-next" type="button" data-bs-target="#carousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <script>

        setTimeout(function () { $("#btnCarousel").click(); }, 5000);
        
    </script>
    
</div>
